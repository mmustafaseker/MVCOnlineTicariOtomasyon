@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-bordered">
    <tr>
        <th>Perosnel Id</th>
        <th>Perosnel Ad</th>
        <th>Perosnel Soyad</th>
        <th>Perosnel Görsel</th>
        <th>Perosnel Satış</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.PersonelId</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-default" style="background-color:orangered">Satışlar</a></td>
        </tr>
    }
</table>