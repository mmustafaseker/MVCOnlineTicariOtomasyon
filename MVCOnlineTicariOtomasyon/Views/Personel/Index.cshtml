@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered mt-2">
    <tr>
        <th>#</th>
        <th>PERSONEL ADI</th>
        <th>PERSONEL SOYADI</th>
        <th>GÖRSEL</th>
        <th>DEPARTMAN</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelId</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.PersonelSoyad</td>
            <td>@item.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelSil/@item.PersonelId" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
            <td><a href="/Personel/PersonelGetir/@item.PersonelId" class="btn btn-outline-success"><i class="fas fa-magic"></i></a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-outline-info"><i class="fas fa-expand"></i></a></td>

        </tr>
    }


</table>
<a href="@Url.Action("PersonelEkle","Personel")" class="btn btn-primary" data-toggle="tooltip" data-placement="right" title="Yeni Kategori Ekle"><i class="fas fa-plus"></i></a>

@section scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}

