@model Kategori
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Guncelleme</h2>
<br />

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{ 
     <div class="form-group">
         @Html.LabelFor(x => x.KategoriAd)
         @Html.TextBoxFor(x=>x.KategoriAd, new { @class="form-control" })
         @Html.HiddenFor(x=>x.KategoriId)
     </div>
     <br />
     <button class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Güncelle"><i class="fas fa-clipboard"></i></button>
}

@section scripts{
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    }
